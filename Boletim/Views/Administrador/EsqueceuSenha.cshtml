
@{
    ViewBag.Title = "Esqueceu  Senha";
}

<h2>Esqueceu Senha</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Esqueceu Senha</h4>
    <hr />

    @Html.Hidden("UsuarioId", (object)ViewBag.UsuarioId)

 
</div>
    <div class="col-md-10">

        <div class="form-group">
            @Html.Label("Senha", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Password("Senha", "", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("Senha", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("ConfirmaSenha", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Password("ConfirmaSenha", "", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("ConfirmaSenha", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Enviar" class="btn btn-success" />
            </div>
        </div>
    </div>
    }


