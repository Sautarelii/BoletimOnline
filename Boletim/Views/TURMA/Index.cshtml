@model IEnumerable<Boletim.TURMA>

@{
    ViewBag.Title = "Index";
}
<br />
<h2>Turma</h2>

<p>
    @Html.ActionLink("Adicionar Turma", "Create", new { }, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SERIE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PERIODO_LET)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SERIE)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PERIODO_LET)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.COD_TURMA }, new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Details", "Details", new { id=item.COD_TURMA }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.COD_TURMA }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
