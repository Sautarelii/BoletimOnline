@model IEnumerable<Boletim.PROFESSOR>

@{
    ViewBag.Title = "Index";
}
<style>
    body {
        background-image: url(../../Content/img/Imagem2.jpg);
        margin: 100px;
    }

    .um {
        width: 100%;
        color: #000;
        border: 4px solid #000;
        height: 1100px;
        background-color: white;
        border-radius: 25px;
        box-sizing: border-box;
    }

    h2 {
        color: black
    }
</style>
<div class="um">

    <h2>Professor</h2>
    <br>
    <p>
        @Html.ActionLink("Adicionar Professor", "CreateProfessor", new { }, new { @class = "btn btn-success" })
    </p>
    <br>
    <br>
    <table class="table">
        <tr>
            <th>
            NOME DO PROFESSOR
            </th>
            <th>
               EMAIL
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NOME)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.Email)
                </td>
                <td>
                <td>
                    @Html.ActionLink("Editar", "EditProfessor", new { id = item.COD_PROF }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Detalhar", "Details", new { id = item.COD_PROF }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.COD_PROF}, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
    <br />
    <br />
<div>

</div>