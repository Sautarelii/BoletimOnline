@model IEnumerable<Boletim.ATIVIDADE>

@{
    ViewBag.Title = "Index";
}
    <html>
    <head>
        <style>
            #Pesquisa.btn {
                border-radius: 40px;
                box-sizing: border-box;
                height:20px;
            }
        </style>


    </head>
<br />
    <h2>Atividade</h2>
<br />
    <p>
        @Html.ActionLink("Adicionar Atividade", "Create", new { }, new { @class = "btn btn-success" }) 
    </p>
<br />
   <p>
      
       @using (Html.BeginForm("Index", "ATIVIDADE", FormMethod.Get))
       {
       <div id="Pesquisa">
           @Html.TextBox("Pesquisa")
           <input type="submit" value="Pesquisar" class="btn btn-primary" />
       </div>
       }
   </p>

    <table class="table">
        <br />
        <br />
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NOME_ATIVIDADE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DATA_ENTREGA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TIPO_ATIVIDADE)
            </th>
           
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NOME_ATIVIDADE)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DATA_ENTREGA)
                </td>
                <td>
                    @{
                        var tipo = "";
                    }

                    @if (item.TIPO_ATIVIDADE == 0)
                    {
                        tipo = "DIVERSIFICADA";
                    }
                    else if (item.TIPO_ATIVIDADE == 1)
                    {
                        tipo = "OBRIGATÓRIA";
                    }
                    else if (item.TIPO_ATIVIDADE == 2)
                    {
                        tipo = "ATITUDINAL";
                    }

                    @tipo
                </td>
                <td>
                
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.COD_ATIVIDADE }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Detalhar", "Details", new { id = item.COD_ATIVIDADE }, new { @class = "btn btn-primary" })  |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.COD_ATIVIDADE }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
    </html>